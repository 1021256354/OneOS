OneOS.LoadAPI('/System/API/Bedrock.lua', false)

local program = Bedrock:Initialise()

Current = {
	Page = 1,
	ComputerName = nil,
	DesktopColour = nil,
	AnimationsEnabled = nil
}

program.OnKeyChar = function(event, keychar)
	if keychar == '\\' then
		os.reboot()
	end
end

program:Run(function()
	program:LoadView('splash')
end)