function main()
  term.clear()
  term.setBackgroundColor(colors.white)
  term.clear()
  term.setCursorPos(1,1)
  term.setTextColor(colors.black)
  print("Do you want to Install Isaac OS v1 Alpha?: ")
  cmd = read()
  if cmd == "yes" then
    start()
    else
      abort()
  end
end

function start()
  term.clear()
  term.setBackgroundColor(colors.white)
  term.clear()
  term.setCursorPos(1,1)
  term.setTextColor(colors.black)
  print("Installing Isaac OS v1 Alpha")
  sleep(0.5)
  fs.makeDir("/isaacos")
  fs.makeDir("/isaacos/system/x16")
  fs.makDir("/isaacos/system/api")
  fs.makeDir("/isaacos/Desktop")
  fs.makeDir("/isaacos/Programs")
  fs.makeDir("/isaacos/Documents")
  sleep("Downloading Dependencies!")
  sleep(0.5)
  shell.run("pastebin", "get", "c6iDXfeh", "/isaacos/system/x16/os.lua")
  sleep(0.5)
  print("Downloading All SystemFiles!")
  sleep(1)
  shell.run("pastebin", "get", "LJnpmary", "startup")
  shell.run("pastebin", "get", "Uk9vKtkj", "/isaacos/system/system.lua")
  shell.run("pastebin", "get", "E8uwgwfX", "/isaacos/Programs/cmd.lua")
  sleep(1)
  textutils.slowWrite("Done Installing!\n Restarting System..")
  sleep(2)
  os.reboot()
end

function abort()
  term.clear()
  term.setCursorPos(1,1)
  term.setTextColor(colors.red)
  print("Aborting Installation for Isaac OS v1 Alpha")
 
  
end

main()